@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewBag.Title @ViewBag.ReleaseLabel</title>

	@Styles.Render("~/bundles/css")

	@Scripts.Render("~/bundles/libraries")

	<script language="javascript">

		APP_VERSION = "@ViewBag.Version";
		@* TODO: this value isn't currently used -- it'd be nice to figure out how to use it*@
		APP_ROOT_NS = "@ViewBag.AppRootNamespace";

		angular.module('fulcrumSeed.global', [])
			.constant('appSettings', {
				apiBasePath: "@ViewBag.ApiBasePath",
			});

	</script>

	@Scripts.Render("~/bundles/app")
</head>
@RenderBody()
</html>