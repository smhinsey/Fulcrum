@{
	ViewBag.Title = "Fulcrum Seed - ";
}
<body ng-cloak ng-app="@ViewBag.AppRootNamespace">
	<div class="container">
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="#">@ViewBag.Title @ViewBag.ReleaseLabel</a>
				</div>
				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav" ng-controller="navController">
						<li ui-sref-active="active"><a ui-sref="home">Home</a></li>
					</ul>
					<ul class="nav navbar-nav navbar-right" ng-controller="badgeController">
						<li ng-show="claims"><p class="navbar-text">Hello, {{claims['firstName']}}</p></li>
						<li ng-show="!claims" ui-sref-active="active"><a ui-sref="register">Register</a></li>

						<li class="dropdown" uib-dropdown is-open="status.isopen" ng-show="claims" ui-sref-active="active" visible-with-role-claim="Admin">
							<a class="dropdown-toggle" uib-dropdown-toggle ng-disabled="disabled">
								Site Admin <span class="caret"></span>
							</a>
							<ul class="dropdown-menu">
								<li>Users</li>
								<li><a ui-sref="admin.users.accounts">Accounts</a></li>
								<li><a ui-sref="admin.users.roles">Roles</a></li>
								<li><a ui-sref="admin.users.sessions">Sessions</a></li>
								<li class="divider"></li>
								<li>Section</li>
								<li><a href="#">Sub-section</a></li>
							</ul>
						</li>

						<li><p class="navbar-text">&nbsp;</p></li>
						<li ng-show="claims"><button type="button" class="btn btn-default navbar-btn" ng-click="logout()">Log Out</button></li>
						<li ng-show="!claims"><button type="button" class="btn btn-default navbar-btn" ng-click="login()">Log In</button></li>
					</ul>
				</div>
			</div>
		</nav>
		<section ui-view></section>
	</div>

	<script type="text/ng-template" id="login.html">
		<div class="modal-header">
			<h3 class="modal-title">Log In</h3>
		</div>
		<div class="modal-body">
			<form name="loginForm">
				<div class="form-group">
					<label for="usernameInput">Email</label>
					<input type="text" class="form-control" id="usernameInput" placeholder="Email" ng-model="email">
				</div>
				<div class="form-group">
					<label for="passwordInput">Password</label>
					<input type="password" class="form-control" id="passwordInput" placeholder="Password" ng-model="password" ui-keydown="{'enter':'login()'}">
				</div>
			</form>
		</div>
		<div class="modal-footer">
			<button class="btn btn-primary" type="button" ng-click="login()">Log In</button>
		</div>
	</script>
</body>